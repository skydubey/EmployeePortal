<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<body style="padding-top:0px">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="background-color:red;">
        <div class="container-fluid">
            @*<a class="navbar-brand" href="#">Navbar w/ text</a>*@
            @Html.ActionLink("Employee Portal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @*<a class="nav-link active" aria-current="page" href="#">Home</a>*@
                        @Html.ActionLink("Home", "Index", "Home", new {@class="nav-link active"})
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Employee Details", "Details", "Home", new {@class="nav-link"})
                        @*<a class="nav-link" href="#">Details</a>*@
                    </li>
                    @*<li class="nav-item">
                        <a class="nav-link" href="#">Pricing</a>
                    </li>*@
                </ul>
                <span class="" style="color:white">
                    Fill the form & See the Data in Table Format.
                </span>
            </div>
        </div>
    </nav>

    <div class="container body-content" style="padding-top:20px">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.2.min.js"></script>
</body>
</html>